# AI Workflow Environment Variables
# Copy this file to .env.local and configure your values

# Base Configuration
AI_WORKFLOW_BASE_URL=http://localhost:3001
AI_WORKFLOW_TIMEOUT=300000

# Directories
AI_WORKFLOW_SCREENSHOTS_DIR=./screenshots
AI_WORKFLOW_LOG_DIR=./logs

# Logging
AI_WORKFLOW_LOG_LEVEL=info
AI_WORKFLOW_SLOW_MO=0

# Performance Testing
AI_WORKFLOW_ENABLE_THROTTLING=false

# Notifications (Optional)
SLACK_WEBHOOK_URL=
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=
EMAIL_TO=
WEBHOOK_URL=

# Development
NODE_ENV=development